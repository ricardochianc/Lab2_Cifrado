@using Lab2_Cifrado.Instancia
@model Lab2_Cifrado.Models.Serie2.SDES

@{
    ViewBag.Title = "Serie 2 |";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<h2>Serie 2</h2>

<div class="col-md-7">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">2. Seleccione para configurar S-DES:</h3>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("SeleccionarOpcion", "Serie2"))
            {
                if (Data.Instancia.RutaPermutaciones == string.Empty)
                {
                    <button type="submit" class="btn btn-default" name="CargarPermutaciones" value="CargarPermutaciones">Cargar Archivo de Permutaciones</button>
                }
                else
                {
                    <button type="submit" class="btn btn-default" name="CargarPermutaciones" value="CargarPermutaciones">Editar permutaciones cargadas</button>
                    <button type="submit" class="btn btn-default" name="Continuar" value="Continuar">Continuar</button>
                }
            }
        </div>
    </div>
</div>

