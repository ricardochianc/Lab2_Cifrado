
@{
    ViewBag.Title = "Serie 1 |";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Serie 1</h2>

<div class="col-md-7">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">2. Seleccione cifrado/descifrado:</h3>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("SeleccionCifrado", "Serie1"))
            {
                <button type="submit" class="btn btn-default" name="ZigZag" value="ZigZag">Zig-Zag</button>
                <button type="submit" class="btn btn-default" name="Espiral" value="Espiral">Espiral</button>
                <button type="submit" class="btn btn-default" name="Cesar" value="Cesar">Cesar</button>
            }
        </div>
    </div>
