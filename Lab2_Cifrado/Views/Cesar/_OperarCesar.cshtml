@model Lab2_Cifrado.Models.Serie1.Cesar

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">4. Ingrese la palabra clave</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("OperarCesar", "Cesar"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.PalabraClave, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.PalabraClave, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PalabraClave, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cifrar/Descifrar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>